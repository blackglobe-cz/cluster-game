{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./api/dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "api/src",
    "package.json"
  ],
  "exclude": [
    "api/node_modules",
    "**/__tests__/*",
    "dist"
  ]
}